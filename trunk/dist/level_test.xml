<?xml version="1.0" encoding="ISO-8859-1"?> 

<gameMode type="simulation" name="TEST MAP">

	<info>
		<map_version>0.2-beta</map_version>
		<author>Dominic Cerquetti</author>
		<description>Sonic Desert Run</description>
	</info>

	<properties>
		<width>3200</width>
		<height>2400</height>
		<camera_x>0</camera_x>
		<camera_y>0</camera_y>
	</properties>
	
	<objectDefinitions>
		<include_xml_file>objects/obj_sonic.xml</include_xml_file>
		<include_xml_file>objects/block3.xml</include_xml_file>
	</objectDefinitions>

	<map>
		<layer scroll_speed="1.0f" name="bg_objects">	

			<repeat times="50">
				<starting_x>0</starting_x>
				<starting_y>0</starting_y>
				<object objectDef="block3">
					<position type="offset">
						<x_offset>200</x_offset>
						<y_offset>0</y_offset>
					</position>
				</object>
			</repeat>
			
			<object objectDef="sonic">
				<position type="fixed">	
					<x>5</x> <y>200</y> 
					<velx>0</velx>
					<vely>0</vely>
				</position>
				<inputController>1</inputController>
				<cameraFollow />
			</object>
		</layer>
	</map>
</gameMode>
