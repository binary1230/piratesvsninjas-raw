<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- 	Sonic Object Definition 
			To be included from another XML file -->

<objectDef name="sonic_x" type="Player">
	<animations default="standing">
	
		<animation name="walking">
			<frames>
				<img name="toneriko/run1.png" duration="2" />
				<img name="toneriko/run2.png" duration="2" />
				<img name="toneriko/run3.png" duration="2" />
				<img name="toneriko/run4.png" duration="2" />
				<img name="toneriko/run5.png" duration="2" />
				<img name="toneriko/run6.png" duration="2" />
				<img name="toneriko/run7.png" duration="2" />
				<img name="toneriko/run8.png" duration="2" />
				<img name="toneriko/run9.png" duration="2" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>
				
		<animation name="standing">
			<frames>
			<img name="toneriko/stand.png" duration="64" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>

		<animation name="jumping">
			<frames>
				<img name="toneriko/jump.png" duration="3" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>
	</animations>
	
	<sounds>
		<sound name="jump">sounds/jump.wav</sound>
	</sounds>
	
	<properties>
		<affectedByGravity />
		<affectedByInput1 />
		<affectedByFriction />
 		<jumpVelocity>	18.0f	</jumpVelocity>
		<drag>					0.92f	</drag>
		<minVelocity>		4.0f	</minVelocity>
		<mass>					1.0f	</mass>
	</properties>
</objectDef>

