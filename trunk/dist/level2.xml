			<x>645</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>774</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>903</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>1032</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>1161</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>1290</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>1419</x><alignTop/><y>30</y></position></object>
			<object objectDef="floor2"><position type="fixed">
			<x>1548</x><alignTop/><y>30</y></position></object>

			<repeat times=10>
				<object objectDef="s_siren">
					<position type="random">
						<xmin>0</xmin><xmax>2500</xmax>
						<ymin>30</ymin><ymax>30</ymax>
						
					</position>
				</object>
			</repeat>

			<object objectDef="s_sign_arrow"><position type="fixed">
			<x>30</x><y>30</y></position></object>
			
			<object objectDef="door"><position type="fixed">
			<x>1300</x><y>30</y></position></object>

			<object objectDef="s_sign_arrow"><position type="fixed">
			<x>1000</x><y>30</y></position></object>
