#!/bin/bash

# script to regenerate auto-config.h
# with values from subversion

version=`svn info | grep Revision | cut -f 2 -d ' '`

# clear out old file
echo "" > auto-config.h

echo "// XXX auto-generated by ./regen-cvs-tags, DO NOT MODIFY!" >> auto-config.h
echo "" >> auto-config.h
echo "#ifndef AUTOCONFIG2_H" >> auto-config.h
echo "#define AUTOCONFIG2_H" >> auto-config.h
echo "" >> auto-config.h
echo "#define SUBVERSION_REVISION \"$version\"" >> auto-config.h
echo "" >> auto-config.h
echo "#endif // AUTOCONFIG2_H" >> auto-config.h
