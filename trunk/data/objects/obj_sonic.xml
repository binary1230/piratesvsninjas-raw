<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- 	Sonic Object Definition
			To be included from another XML file -->

<objectDef name="sonic" type="Player">
	<animations default="standing">
	
		<animation name="walking">
			<frames>
				<img name="data/run1.bmp" duration="2" />
				<img name="data/run2.bmp" duration="2" />
				<img name="data/run3.bmp" duration="2" />
				<img name="data/run4.bmp" duration="2" />
				<img name="data/run5.bmp" duration="2" />
				<img name="data/run6.bmp" duration="2" />
				<img name="data/run7.bmp" duration="2" />
				<img name="data/run8.bmp" duration="2" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>
				
		<animation name="standing">
			<frames>
				<img name="data/wait1.bmp" duration="4" />
				<img name="data/wait2.bmp" duration="4" />
				<img name="data/wait1.bmp" duration="4" />
				<img name="data/wait2.bmp" duration="4" />
				<img name="data/wait1.bmp" duration="4" />
				<img name="data/wait2.bmp" duration="64" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>

		<animation name="jumping">
			<frames>
				<img name="data/spin1.bmp" duration="3" />
				<img name="data/spin2.bmp" duration="3" />
				<img name="data/spin3.bmp" duration="3" />
				<img name="data/spin4.bmp" duration="3" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>
	</animations>
	<properties>
		<affectedByGravity />
		<affectedByInput1 />
		<affectedByFriction />
 		<jumpVelocity>	8.0f	</jumpVelocity>
		<drag>					0.97f	</drag>
		<minVelocity>		1.0f	</minVelocity>
		<mass>					1.0f	</mass>
	</properties>
</objectDef>

