<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- 	Sonic Object Definition 
			To be included from another XML file -->

<objectDef name="sonic" type="Player">
	<animations default="standing">
	
		<animation name="walking">
			<frames>
				<img name="data/newguy/run1.bmp" duration="2" />
				<img name="data/newguy/run2.bmp" duration="2" />
				<img name="data/newguy/run3.bmp" duration="2" />
				<img name="data/newguy/run4.bmp" duration="2" />
				<img name="data/newguy/run5.bmp" duration="2" />
				<img name="data/newguy/run6.bmp" duration="2" />
				<img name="data/newguy/run7.bmp" duration="2" />
				<img name="data/newguy/run8.bmp" duration="2" />
				<img name="data/newguy/run9.bmp" duration="2" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>
				
		<animation name="standing">
			<frames>
			<img name="data/newguy/stand.bmp" duration="64" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>

		<animation name="jumping">
			<frames>
				<img name="data/newguy/jump.bmp" duration="3" />
			</frames>
			<show_in_order />
			<repeat />
		</animation>
	</animations>
	
	<sounds>
		<sound name="jump">data/sounds/jump.wav</sound>
	</sounds>
	
	<properties>
		<affectedByGravity />
		<affectedByInput1 />
		<affectedByFriction />
 		<jumpVelocity>	18.0f	</jumpVelocity>
		<drag>					0.92f	</drag>
		<minVelocity>		4.0f	</minVelocity>
		<mass>					1.0f	</mass>
	</properties>
</objectDef>

